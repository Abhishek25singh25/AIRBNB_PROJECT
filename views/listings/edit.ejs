<% layout("layouts/boilerplate") %>

<h2>Edit Listing</h2>

<form action="/listings/<%= listing._id %>?_method=PUT" method="POST">

  <input type="text"
         name="title"
         value="<%= listing.title %>"
         class="form-control mb-2">

  <input type="text"
         name="image[url]"
         value="<%= listing.image.url %>"
         class="form-control mb-2">

  <input type="number"
         name="price"
         value="<%= listing.price %>"
         class="form-control mb-2">

  <input type="text"
         name="location"
         value="<%= listing.location %>"
         class="form-control mb-2">

  <input type="text"
         name="country"
         value="<%= listing.country %>"
         class="form-control mb-2">

  <textarea name="description"
            class="form-control mb-3"><%= listing.description %></textarea>

  <button class="btn btn-warning">Update</button>

</form>